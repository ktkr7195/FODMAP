%nav.headerbar
  %span#js-navbar-toggle.headerbar-toggle
    %i.fa.fa-bars.fa-3x
  %a.logo{:href => "/"}        
    %img{:alt => "abdomon", :src => "https://happy-gut-fodmap.s3-ap-northeast-1.amazonaws.com/uploads/recipe/picture/abdomon-white-bg.jpg"}/
  %ul#js-menu.main-nav
    - if user_signed_in?
      .menu-group
        .menu-left
          %li
            .nav-links.pb-15.pt-15
              = link_to 'レシピ検索', recipes_search_path
          %li
            .nav-links.pb-15.pt-15
              = link_to 'レシピを作成', new_recipe_path
          %li
            .nav-links.pb-15.pt-15
              = link_to 'お気に入り', recipes_liked_path
          %li
            .nav-links.pb-15.pt-15
              = link_to " マイページ  ", "/user/#{current_user.id}" 
          %li
            .nav-links.pb-15.pt-15 
              = link_to 'ログアウト', destroy_user_session_path, method: :delete 
        %li
          .menu-right.search-dis-none
            .nav-links 
              .search-input
                = form_tag(recipes_search_path,:method => 'get') do
                  = text_field_tag :search, "", placeholder: 'キーワード'            
                  = submit_tag '検索', class:'bg-darkgrey', :name => nil             
    - else
      .menu-group
        .menu-left
        .menu-right.d-flex
          %li
            .nav-links
              = link_to 'サインアップ', new_user_registration_path
          %li
            .nav-links
              = link_to 'ログイン', new_user_session_path


:javascript
  $( document ).ready(function() {
    console.log("ready!")    
    let mainNav = document.getElementById('js-menu');
    let navBarToggle = document.getElementById('js-navbar-toggle');
    console.log(mainNav)
    navBarToggle.addEventListener('click', function () {
      console.log("clicked!!")
      mainNav.classList.toggle('active');
    });
  });