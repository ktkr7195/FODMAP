= form_for(@recipe) do |f|
  = render 'shared/error_messages', model: f.object
  = f.file_field :picture, accept: 'image/jpeg,image/gif,image/png'
  .field
    = f.text_field :title, placeholder: "タイトル(ex. カレー)"
    = f.text_area :content, placeholder: recipe_sample
  .field
    .tag-title
      %h3
        レシピのカテゴリーを選択してください。    
    .form-check    
      = f.check_box :tag_list, { :multiple => true }, 'ラクトースフリー', nil
      .tag-title
        %check-box-label{for: "recipe_tag_list_ラクトースフリー"} ラクトースフリー
    .form-check
      = f.check_box :tag_list, { :multiple => true }, 'グルテンフリー', nil
      .tag-title
        %check-box-label{for: "recipe_tag_list_グルテンフリー"} グルテンフリー
    .form-check  
      = f.check_box :tag_list, { :multiple => true }, 'ベジタリアン', nil
      .tag-title
        %check-box-label{for: "recipe_tag_list_ベジタリアン"} ベジタリアン
    .form-check  
      = f.check_box :tag_list, { :multiple => true }, 'ビーガン', nil
      .tag-title
        %check-box-label{for: "recipe_tag_list_ビーガン"} ビーガン
    -# Doesnt work with checkbox  
    -# .form-group      
    -#   %tag-text-list{for: "recipe_tag_list"} タグをカンマ区切りで入力
    -#   = f.text_field :tag_list
  = f.submit "Post", class: "btn btn-primary"
:javascript
  $('#recipe_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('写真サイズは5MBまでとなっております。サイズを下げてください。');
    }
  });



